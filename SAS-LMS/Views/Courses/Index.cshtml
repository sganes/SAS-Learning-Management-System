@model IEnumerable<SAS_LMS.Models.Course>


<div class="panel panel-default">
    <div class="panel-heading CourseHeader">
        <span class="pull-right">
            @Html.ActionLink("Add a new Course", "Create")
            &nbsp;
            @Html.ActionLink("Finished Courses", "CourseHistory")

        </span>
          <h1 class="panel-title">Ongoing and Upcoming Courses</h1>
             
    </div>
    <div class="panel-body">
        <div class="CouseCointainer">
            <ul class="courses">
                @if (Model.Count() == 0)
                {
                    <li><h3>Courses are yet to be planned</h3></li>
                }
                else
                {
                    foreach (var course in Model)
                    {
                        <li>
                            <div class="date">
                                <div class="monthyear">
                                    @if (course.StartDate <= DateTime.Now)
                                    {
                                    <p style="background-color:forestgreen;">
                                        @course.StartDate.ToString("MMM yyyy")
                                    </p>
                                    }
                                    else
                                    {
                                        <p style="background-color:grey;">
                                            @course.StartDate.ToString("MMM yyyy")
                                        </p>
                                    }
                                </div>
                                <div class="day">
                                    @course.StartDate.ToString("d ")
                                </div>
                            </div>
                            <div class="details">

                                @Html.ActionLink(@course.Name, "Details", "Courses", new { id = course.Id }, "")

                                <br />
                                <span class="coursedescription">
                                    @course.Description
                                </span>
                            </div>
                            <hr />
                        </li>

                    }
                }

            </ul>
      </div>
       
    </div>
</div>








